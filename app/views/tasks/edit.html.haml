.container
  %ul
  - @task.errors.full_messages.each do |message|
    %li= message   

  = form_with(model: @task, url: board_task_path(@board, @task), method: 'put', local: true) do |f|
    %div
      = f.label :title, 'Name'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, 'Description'
    %div
      = f.text_area :content
    %div
      = f.label :limit_date, 'Deadline'
    %div
      = f.date_field :limit_date, class: 'text'
    %div
      = f.label :eyecatch, 'Eyecatch'
    %div
      = f.file_field :eyecatch, class: 'text'      
    %div
      = f.submit 'Submit', class: 'btn-primary'